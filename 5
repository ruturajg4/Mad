#java file

package com.example.a81;

import androidx.appcompat.app.AppCompatActivity;

import android.annotation.SuppressLint;
import android.os.Bundle;
import android.widget.ArrayAdapter;
import android.widget.AutoCompleteTextView;

public class MainActivity extends AppCompatActivity {
    String[] lang =new String[]{"NIS","MAD","PWP","MGT","ETI"};
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        ArrayAdapter<String> adpt=new ArrayAdapter<String>(this,android.R.layout.simple_dropdown_item_1line,lang);

        AutoCompleteTextView auto=(AutoCompleteTextView) findViewById(R.id.a);

        auto.setThreshold(1);
        auto.setAdapter(adpt);
    }
}
